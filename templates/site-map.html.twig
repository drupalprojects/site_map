<?php
/**
 * @file
 * Theme implementation to display the site map.
 *
 * Available variables:
 * - $message:
 * - $rss_legend:
 * - $site_map:
 * - $additional:
 *
 * @see template_preprocess()
 * @see template_preprocess_site_map()
 */
?>

<div id="site-map">
  {% if message %}
    <div class="site-map-message">
      {{ message }}
    </div>
  {% endif %}

  {% if rss_legend %}
    <div class="site-map-rss-legend">
      {{ rss_legend }}
    </div>
  {% endif %}

  {{ site_map | raw }}

  {% if additional %}
    <div class="site-map-additional">
      {{ additional }}
    </div>
  {% endif %}
</div>
